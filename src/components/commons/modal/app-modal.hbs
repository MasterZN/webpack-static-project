<app-modal class="{{className}}">
    <div class="modal {{effect}}" id="{{modalId}}" tabindex="-1" role="dialog" aria-labelledby="{{titleId}}" aria-hidden="true">
        <div class="modal-dialog {{#if modalSize}}modal-{{modalSize}}{{else}}modal-sm{{/if}}">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title" id="{{titleId}}">{{titleId}}</h2>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="container-fluid">
                        <div class="row">
                            {{> @partial-block}}
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</app-modal>